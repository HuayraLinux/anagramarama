-	pushSound(soundCache, "foundbig", "audio/foundbig.wav");
-	pushSound(soundCache, "found", "audio/found.wav");
-	pushSound(soundCache, "clear", "audio/clearword.wav");
-	pushSound(soundCache, "duplicate", "audio/duplicate.wav");
-	pushSound(soundCache, "badword", "audio/badword.wav");
-	pushSound(soundCache, "shuffle", "audio/shuffle.wav");
-	pushSound(soundCache, "clock-tick", "audio/clock-tick.wav");
+	pushSound(soundCache, "click-answer", "/usr/share/games/anagramarama/audio/click-answer.wav");
+	pushSound(soundCache, "click-shuffle", "/usr/share/games/anagramarama/audio/click-shuffle.wav");
+	pushSound(soundCache, "foundbig", "/usr/share/games/anagramarama/audio/foundbig.wav");
+	pushSound(soundCache, "found", "/usr/share/games/anagramarama/audio/found.wav");
+	pushSound(soundCache, "clear", "/usr/share/games/anagramarama/audio/clearword.wav");
+	pushSound(soundCache, "duplicate", "/usr/share/games/anagramarama/audio/duplicate.wav");
+	pushSound(soundCache, "badword", "/usr/share/games/anagramarama/audio/badword.wav");
+	pushSound(soundCache, "shuffle", "/usr/share/games/anagramarama/audio/shuffle.wav");
+	pushSound(soundCache, "clock-tick", "/usr/share/games/anagramarama/audio/clock-tick.wav");
 }
 
